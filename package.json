{
  "name": "penpal",
  "version": "3.1.2",
  "description": "A promise-based library for communicating with iframes via postMessage.",
  "author": "Aaron Hardy <aaron@aaronhardy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Aaronius/penpal/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aaronius/penpal.git"
  },
  "keywords": [
    "iframe",
    "postMessage",
    "promise"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist lib",
    "minify": "terser dist/penpal.js -o dist/penpal.min.js -m --source-map",
    "build": "rollup --config",
    "build:prod": "npm-run-all clean build minify copy-types && ls -lh dist/penpal.min.js",
    "build:watch": "rollup --config --watch",
    "copy-types": "cp types/index.d.ts lib",
    "lint": "eslint src/**",
    "test": "npm-run-all clean run-tests",
    "test:watch": "npm-run-all clean run-tests:watch",
    "test:sauce": "npm-run-all build 'run-tests -- --sauce'",
    "run-tests": "./scripts/test.js",
    "run-tests:watch": "npm run run-tests -- --watch",
    "prepublish": "npm-run-all test dtslint build:prod",
    "dtslint": "dtslint types"
  },
  "files": [
    "dist",
    "lib"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-plugin-add-module-exports": "^1.0.0",
    "connect": "^3.6.6",
    "dtslint": "^0.4.2",
    "eslint": "^5.10.0",
    "eslint-plugin-import": "^2.14.0",
    "jasmine-core": "^3.3.0",
    "karma": "^3.1.4",
    "karma-babel-preprocessor": "^8.0.0-beta.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-sauce-launcher": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "1.15.3",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "rsvp": "^4.8.4",
    "serve-static": "^1.13.2",
    "terser": "^3.13.1",
    "yargs": "^12.0.5"
  },
  "browserslist": [
    "last 1 IE version",
    "last 1 Chrome version",
    "last 1 Firefox version",
    "last 1 Safari version",
    "last 1 Edge version"
  ]
}
